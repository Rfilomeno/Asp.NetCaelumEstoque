    @model IList<CaelumEstoque.Models.Produto>


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <table>
            <thead>
                <tr>
                    <th> id </th>
                    <th> nome </th>
                    <th> quantidade </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td> @Html.RouteLink(item.Nome, "VizualizaProduto", new {id = item.Id })</td>
                        <td>@item.Quantidade</td>
                    </tr>
                }
                
            </tbody>
        </table> 
    </div>
</body>
</html>
