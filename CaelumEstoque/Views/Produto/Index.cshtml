    @model IList<CaelumEstoque.Models.Produto>


        <table class="table table-hover">
            <thead>
                <tr>
                    <th> id </th>
                    <th> nome </th>
                    <th> quantidade </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td> @Html.RouteLink(item.Nome, "VizualizaProduto", new {id = item.Id })</td>
                        <td>@item.Quantidade</td>
                    </tr>
                }
                
            </tbody>
        </table> 
